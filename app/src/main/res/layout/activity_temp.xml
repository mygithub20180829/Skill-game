<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".TempActivity">
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			<TextView
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="温度风扇控制系统"
					android:textColor="#8B4513"
					android:textSize="30sp"
			/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="风扇状态"
			/>
			<View
					android:layout_width="match_parent"
					android:layout_height="3dp"
					android:background="#000"
			/>
			<pl.droidsonroids.gif.GifImageView
					android:id="@+id/giv1"
					android:src="@drawable/fan"
					android:layout_width="match_parent"
					android:layout_height="100dp"/>
			<View
					android:layout_width="match_parent"
					android:layout_height="3dp"
					android:background="#000"
			/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="温度"
			
			/>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
			>
				<TextView
						android:layout_weight="1"
						android:textColor="#000000"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
				/>
				<TextView
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:textColor="#000000"
						android:textSize="20sp"
						android:id="@+id/temp"
				/>
				<TextView
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:textColor="#000000"
						android:textSize="20sp"
						android:text="℃"
				/>
			</LinearLayout>
			<View
					android:layout_width="match_parent"
					android:layout_height="3dp"
					android:background="#000"
			/>
			<LinearLayout
					
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
			>
				<LinearLayout
						android:layout_weight="1"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
				
				>
					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="设置温度警戒区间"
					/>
					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="vertical"
					>
						<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
						>
							<EditText
									android:layout_weight="1"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:hint="请输入最低温度"
									android:id="@+id/low_temp"
							/>
							<TextView
									android:layout_weight="1"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:textSize="20sp"
									android:text="℃"
							/>
						</LinearLayout>
						<LinearLayout
								android:orientation="horizontal"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">
							<EditText
									android:layout_weight="1"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:hint="请输入最高温度"
									android:id="@+id/high_temp"
							/>
							<TextView
									android:layout_weight="1"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:textSize="20sp"
									android:text="℃"
							/>
						</LinearLayout>
						<Button
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="设置"
								android:textColor="#000000"
								android:textSize="18sp"
								android:id="@+id/set_temp"
						/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
						android:layout_weight="1"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="match_parent">
					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textColor="#000000"
							android:text="手动控制"
					
					/>
					<Button
							android:layout_marginTop="15dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20dp"
							android:layout_marginRight="20dp"
							android:textSize="18sp"
							android:text="开启"
							android:id="@+id/open_fan"
					/>
					<Button
							android:layout_marginTop="20dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20dp"
							android:layout_marginRight="20dp"
							android:textSize="18sp"
							android:text="关闭"
							android:id="@+id/close_fan"
					/>
					<Switch
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="点击切换自动控制"
							android:shadowColor="#8B4513"
							android:id="@+id/switch1"
					/>
				
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
				<!--<TextView-->
				<!--android:layout_width="match_parent"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:textColor="#000000"-->
				<!--android:text="自动控制"/>-->
			
			</LinearLayout>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:text="舵机操作："/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="水平值:"/>
				<TextView
						android:id="@+id/CurrentSeekBarX"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:textColor="#000000"
						android:text="垂直值:"/>
				<TextView
						android:id="@+id/CurrentSeekBarY"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"/>
			</LinearLayout>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="15sp"
						android:text="水平控制"/>
				<SeekBar
						android:id="@+id/seekBarX"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:max="180"
						android:layout_marginLeft="40dp"
						android:layout_marginRight="50dp"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="15sp"
						android:text="垂直控制"/>
				<SeekBar
						android:id="@+id/seekBarY"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:max="180"
						android:layout_marginLeft="40dp"
						android:layout_marginRight="50dp"/>
			</LinearLayout>
			
			<Button
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="数据查询"
					android:id="@+id/data_research"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>
